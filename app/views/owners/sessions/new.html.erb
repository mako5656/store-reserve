<%= render "owners/shared/form_wrapper" do %>
  <h2 class="text-2xl font-bold mb-8 text-center">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
    <div>
      <%= f.label :email, class: "block mb-2 font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
                        class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :password, class: "block mb-2 font-medium text-gray-700" %>
      <%= f.password_field :password, autocomplete: "current-password",
                           class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center space-x-2">
        <%= f.check_box :remember_me, class: "rounded border-gray-300 focus:ring-blue-500" %>
        <%= f.label :remember_me, class: "text-sm text-gray-700" %>
      </div>
    <% end %>

    <div>
      <%= f.submit "Log in", class: "w-full bg-blue-600 hover:bg-blue-700 text-white py-2 rounded font-medium transition" %>
    </div>
  <% end %>

  <div class="mt-6 text-center text-sm text-gray-600">
    <%= render "owners/shared/links" %>
  </div>
<% end %>
