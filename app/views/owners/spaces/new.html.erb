<div class="max-w-2xl mx-auto px-4 py-8">
  <h2 class="text-2xl font-bold mb-4">スペースを作成</h2>

  <%= form_with model: [:owners, @space], local: true, html: { class: "space-y-4" } do |f| %>
    <div>
      <%= f.label :name, "スペース名" %>
      <%= f.text_field :name, class: "w-full p-2 border rounded" %>
    </div>

    <div>
      <%= f.label :description, "説明" %>
      <%= f.text_area :description, class: "w-full p-2 border rounded" %>
    </div>

    <div>
      <%= f.label :address, "住所" %>
      <%= f.text_field :address, class: "w-full p-2 border rounded" %>
    </div>

    <div>
      <%= f.label :price, "料金（1時間）" %>
      <%= f.number_field :price, class: "w-full p-2 border rounded" %>
    </div>

    <div>
      <%= f.label :capacity, "収容人数" %>
      <%= f.number_field :capacity, class: "w-full p-2 border rounded" %>
    </div>

    <div>
      <%= f.label :image, "画像" %>
      <%= f.file_field :image %>
    </div>

    <div>
      <%= f.submit "作成", class: "bg-indigo-600 text-white px-6 py-2 rounded hover:bg-indigo-500" %>
    </div>
  <% end %>
</div>
