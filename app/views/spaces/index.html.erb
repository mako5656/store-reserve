<div class="max-w-7xl mx-auto px-4 py-12">
  <h2 class="text-3xl font-bold mb-6">スペース一覧</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
    <% @spaces.each do |space| %>
      <div class="bg-white rounded-lg shadow hover:shadow-lg transition duration-300 overflow-hidden">
        <% if space.image.attached? %>
          <%= image_tag space.image, class: "w-full h-48 object-cover" %>
        <% else %>
          <div class="w-full h-48 bg-gray-200 flex items-center justify-center text-gray-500">
            No Image
          </div>
        <% end %>
        <div class="p-4">
          <h3 class="text-xl font-semibold"><%= space.name %></h3>
          <p class="text-gray-600 text-sm"><%= truncate(space.description, length: 60) %></p>
          <p class="mt-2 text-indigo-600 font-bold">¥<%= number_with_delimiter(space.price) %> / 時間</p>
          <div class="mt-4">
            <%= link_to "詳細を見る", space_path(space), class: "inline-block text-white bg-indigo-600 px-4 py-2 rounded hover:bg-indigo-500" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
