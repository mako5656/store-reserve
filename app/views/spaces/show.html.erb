<div class="max-w-4xl mx-auto px-4 py-12">
  <h2 class="text-3xl font-bold mb-4"><%= @space.name %></h2>
  <% if @space.image.attached? %>
    <%= image_tag @space.image, class: "w-full h-64 object-cover mb-6 rounded" %>
  <% end %>
  <p class="text-gray-700 mb-4"><%= @space.description %></p>
  <p class="text-lg font-semibold mb-4">¥<%= number_with_delimiter(@space.price) %> / 時間</p>

  <% if user_signed_in? %>
    <%= link_to "予約する", "#", class: "bg-indigo-600 text-white px-6 py-3 rounded hover:bg-indigo-500" %>
  <% else %>
    <%= link_to "ログインして予約", new_user_session_path, class: "bg-gray-300 text-gray-700 px-6 py-3 rounded hover:bg-gray-400" %>
  <% end %>
</div>
