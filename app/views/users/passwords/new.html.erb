<%= render "users/shared/form_wrapper" do %>
  <h2 class="text-2xl font-bold mb-8 text-center">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :email, class: "block mb-2 font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
                        class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mt-4">
      <%= f.submit "Send me reset password instructions", class: "w-full bg-blue-600 hover:bg-blue-700 text-white py-2 rounded font-medium transition" %>
    </div>
  <% end %>

  <div class="mt-6 text-center text-sm text-gray-600">
    <%= render "users/shared/links" %>
  </div>
<% end %>
